.fault-list{
  height: 100%;
  width: 750rpx;
}

.fault-detail{
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  overflow: hidden;
  align-self: flex-start;
  border-bottom: 2rpx solid #aeaeae;
  line-height: 50rpx;
  margin-top: 50rpx;
}

.fault-flag{
  width: 140rpx;
  height: 80rpx;
  border-radius: 32rpx;
  text-align: center;
  line-height: 80rpx;
  color: white;
  font-size: 36rpx;
  font-family: Arial, "Microsoft YaHei";
  font-weight: bold;
  margin: 10rpx 20rpx 10rpx 0;
}

.fault-title{
  display: flexl;
  flex-direction: column;
  word-break:keep-all;             /* 不换行 */
  white-space:nowrap;            /* 不换行 */

}