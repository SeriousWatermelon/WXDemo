page{  
  height: 100%;  
}  
  
.container {  
  height: 100%;
  width: 100%;
  display: flex;  
  flex-direction: column;  
  padding: 0;  
  box-sizing: border-box;  
  background-color: #f2f2f2  
}   
  
/*登录图片*/  
.login-icon{  
  flex: none;  
}  
.login-img{  
  width: 750rpx;  
}

/*表单内容*/  
.login-from {  
  margin-top: 20px;
  flex: auto;  
  height:100%;  
}  

.identifyImage {  
  margin-left: 32rpx;
  width: 32rpx;  
  height: 32rpx  
} 

.inputView {  
  background-color: #fff;  
  line-height: 44px;
  width: 600rpx;
}  
/*输入框*/  
.nameImage, .keyImage {  
  margin-left: 32rpx;  
  width: 32rpx;  
  height: 32rpx  
}

.loginLab {  
  margin: 10rpx 0 0 15rpx;
  color: #545454;  
  font-size: 14px  
}  
.inputText {  
  flex: block;  
  float: right;  
  text-align: right;  
  margin-right: 22px;  
  margin-top: 11px;  
  color: #cccccc;  
  font-size: 14px  
}  
  
.line {  
  width: 100%;  
  height: 1px;  
  background-color: #cccccc;  
  margin-top: 1px;  
}  

.loginBtn {  
  margin-top: 24rpx;
} 

