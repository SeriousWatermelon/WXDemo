page{  
  height: 100%;  
} 

.banner{
  height: 80rpx;
  background-color: #F6F8F8;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:center;
  margin: 0 0 10rpx 0;
}

.section{
  display: flex;
  flex-direction: row;
}

.picker{
  font-size: 38rpx;
}

.place{
  height:38rpx;
  width:28rpx;
  padding-right: 10rpx;
  padding-top: 8rpx;
}
 
.container {
  width: 100%;
  height: 100%;
  display: flex;  
  flex-direction: column;
}


.scroll-box{
  width:100%; 
  padding: 16rpx; 
}
.scroll-item{
  display:inline-block;
  padding: 20rpx 20rpx 0 20rpx;
}
.scroll-item image{
  height:120rpx;
  width:120rpx;
  padding-left: 20rpx;
}
.scroll-item text{
  margin-left: 0px;
  font-size: 36rpx;
  color: #666;
}

.notice{
  height:160rpx;
  width:750rpx;
  margin:24rpx;
  display:flex;
  flex-direction:row;
  border:2rpx solid #909090;
}

.season{
  height: 500rpx;
  width: 750rpx;
}


.recommend{
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recommend-title{
  display: flex;
  flex-direction: row;
  margin: 30rpx 0 30rpx 0;
}

.article-banner{
  padding: 30rpx;
}

.article{
  height: 100%;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.article-detail{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  text-align: center;
  margin-bottom: 20rpx;
}





